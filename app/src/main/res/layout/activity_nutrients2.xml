<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".Nutrients">



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700"
        tools:context=".Nutrients">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mussels"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_column="2"
            android:text="Mussels\n"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="156dp"
                android:layout_column="1"
                android:text="Nutrients"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="218dp"
                android:gravity="right"
                android:text="Amount"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Calories"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="106 kcal"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Fat"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="0.65g"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Protein"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="15.1g"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Iron"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="4.7 mg"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Cholesterol"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="37 mg"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableLayout>


        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Iron"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="14mg"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Sodium1"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="97 mg"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_column="1"
                android:text="Calcium"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:gravity="right"
                android:text="21.7mg"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="RtlCompat" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="194dp">


            <TextView android:text="   " />

            <Button
                android:id="@+id/backtohbc"
                android:layout_width="185dp"
                android:layout_height="60dp"
                android:layout_marginBottom="316dp"

                android:fontFamily="@font/extralight"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/nexttohbm"
                android:layout_width="185dp"
                android:layout_height="60dp"
                android:layout_marginBottom="316dp"

                android:fontFamily="@font/extralight"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="parent" />

        </TableRow>
    </TableLayout>


</RelativeLayout>